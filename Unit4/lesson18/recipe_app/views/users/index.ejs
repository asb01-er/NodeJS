<h2>Users Table</h2>

<table class="table">
  <thead>
    <tr>
      <!-- Column headers -->
      <th>Name</th>
      <th>Email</th>
      <th>Zip Code</th>
    </tr>
  </thead>

  <tbody>
    <% 
      // Loop through the list of users passed to this view
      users.forEach(user => { 
    %>
      <tr>
        <!-- Display the virtual full name (first + last) -->
        <td><%= user.fullName %></td>

        <!-- Display user email -->
        <td><%= user.email %></td>

        <!-- Display user zip code -->
        <td><%= user.zipCode %></td>
      </tr>
    <% }); %>
  </tbody>
</table>
